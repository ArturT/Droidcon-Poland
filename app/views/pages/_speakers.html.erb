<% content = capture do %>
  <% unless @speakers.nil? %>
    <% @speakers.each do |speaker| %>
      <div class="speaker_container" id="speaker_<%= speaker.id %>">
        <div class="left">
          <%= speaker_photo("speakers/#{speaker.id}.jpg") %>
        </div>
        <div class="right">
          <h2><%= speaker.name %></h2>
          <div class="text">
            <%= speaker.description %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <%= t 'common.coming_soon' %>
  <% end %>
<% end %>

<%= render 'layouts/header',
  first_header: false,
  number: 2,
  title: t('page.speakers.title'),
  right_box: nil,
  content: content
%>
